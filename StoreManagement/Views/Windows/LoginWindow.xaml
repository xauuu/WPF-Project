<Window x:Class="StoreManagement.Views.Windows.LoginWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoreManagement"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="Login"
        Height="500"
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        FontFamily="Calibri"
        DataContext="{StaticResource LoginVM}"
        Name="loginWindow">
    <Grid>
        <Rectangle Height="280"
                   VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="#e7e8ea" />
                    <GradientStop Color="#282a36"
                                  Offset="1" />
                    <GradientStop Color="#3b4855"
                                  Offset="0.546" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Width="280"
                   Height="240"
                   VerticalAlignment="Bottom"
                   Margin="0,80"
                   RadiusY="10"
                   RadiusX="10"
                   Fill="White">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="15"
                                  Direction="0"
                                  RenderingBias="Quality"
                                  ShadowDepth="1"
                                  Color="#FFBBBBBB" />
            </Rectangle.Effect>
        </Rectangle>
        <Grid VerticalAlignment="Bottom"
              Margin="35,80"
              Height="240">
            <Label Content="Đăng nhập"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="5"
                   Foreground="#3b4855"
                   FontSize="18" />
            <StackPanel VerticalAlignment="Center"
                        Margin="15">
                <TextBox Name="txtUserName"
                         Text="{Binding UserName}"
                         Margin="0,10"
                         materialDesign:HintAssist.Hint="Tài khoản"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         FontFamily="Calibri"
                         FontSize="18"
                         Focusable="True" />
                <PasswordBox x:Name="PasswordBox"
                             Margin="0,10"
                             materialDesign:HintAssist.Hint="Mật khẩu"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                             FontFamily="Calibri"
                             FontSize="18">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                                   CommandParameter="{Binding ElementName=PasswordBox}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>
            </StackPanel>
        </Grid>
        <Button Command="{Binding CloseCommand}"
                CommandParameter="{Binding ElementName=loginWindow}"
                Width="30"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="310,0,10,460"
                BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/Images/closeButton.png" />
            </Button.Background>
        </Button>
        <Button Command="{Binding LoginCommand}"
                CommandParameter="{Binding ElementName=loginWindow}"
                Width="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,65"
                Content="Đăng nhập"
                Background="#3b4855"
                IsDefault="True" />
        <TextBlock x:Name="txtForgotPassword"
                   Text="Quên mật khẩu?"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="30"
                   Foreground="Gray"
                   Cursor="Hand" />
        <Image Source="/Images/home.png"
               Width="100"
               Height="100"
               VerticalAlignment="Top"
               Margin="30" />
    </Grid>
</Window>